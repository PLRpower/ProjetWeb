<header class="header">
    <section class="header__container">
        <div class="header__menu">
            <a class="logo" href="/">
                <img alt="Logo | Intern Rift" height="135" src="/assets/img/logo.webp" width="617">
            </a>
            <button class="button__primary" id="headerHamburger">
                <i class="icon" id="headerIcon">menu</i>
            </button>
        </div>
        <div id="headerLinks">
            <ul class="header__links__left">
                <li><a class="header__link" href="/">Accueil</a></li>
                <li><a class="header__link" href="/dernieres-offres">Offres</a></li>
                <li><a class="header__link" href="/entreprises">Entreprises</a></li>
            </ul>
            <div class="header__links__right">
                <form action="/recherche" class="header__search__form" method="POST">
                    <label>
                        <input class="header__search" placeholder="Rechercher un stage, entreprise..." type="search"
                               name="search" id="search">
                    </label>
                    <button class="header__search__submit" type="submit">
                        <i class="icon">search</i>
                    </button>
                </form>
                {% if user %}
                    <a href="/dashboard" id="headerLogin">
                        <img src="https://avatar.iran.liara.run/username?username={{ user.first_name }}+{{ user.last_name }}&background=e2b043&color=fff"
                             alt="Avatar" class="profile__picture">
                    </a>
                {% else %}
                    <a class="button__primary button--small" href="/connexion" id="headerLogin">Se connecter
                        <i class="icon button__icon">arrow_forward</i>
                    </a>
                {% endif %}
            </div>
        </div>
    </section>
    <progress id="scrollProgress" max="100" value="0"></progress>
</header>

<script src="/assets/js/navbar.js"></script>