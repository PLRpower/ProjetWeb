{% extends "sidebar.twig" %}

{% block content %}


    <section class="admin__container">
        <div class="admin__content">
            <h2>Gérer les étudiants</h2>
            <p>Listez, modifiez et supprimez les étudiants de l'application.</p>
        </div>
    </section>

    <button onclick="toggleEdit()" class="button__secondary button--small button__cudr">Ajouter un étudiant</button>

    <section class="CUDR">
        <table>
            <thead>
            <tr>
                <td></td>
                <td>Nom</td>
                <td>Prénom</td>
                <td>Email</td>
                <td>Promotion</td>
                <td>Etat</td>
                <td></td>
            </tr>
            </thead>

            <tbody>
            {% for student in items %}
            <tr>
                <td><img src="/assets/img/martin.webp" alt="{{ student.id }}" class="picto_table"></td>
                <td>{{ student.user.last_name }}</td>
                <td>{{ student.user.first_name }}</td>
                <td>{{ student.user.email }}</td>
                <td>{{ student.promotion }}</td>

                <td class="student_status {% if student.internship_status == 'en cours' %}in-progress {% elseif student.internship_status == 'recherche' %}searching {% elseif student.internship_status == 'terminé' %}finished{% endif %}">
                    {% if student.internship_status == 'en cours' %}
                        <p>En cours</p>
                    {% elseif student.internship_status == 'recherche' %}
                        <p>Recherche</p>
                    {% elseif student.internship_status == 'terminé' %}
                        <p>Terminé</p>
                    {% endif %}
                </td>

                <td>
                    <button onclick="toggleEdit()" class="CUDR_button edit">
                        <i class="icon">edit</i>
                        Modifier
                    </button>

                    <button onclick="toggleDelete()" class="CUDR_button delete">
                        <i class="icon">delete</i>
                        Supprimer
                    </button>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>

    {% include 'pagination.twig' %}

{% endblock %}