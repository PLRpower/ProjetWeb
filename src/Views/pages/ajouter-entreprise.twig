{% extends "sidebar.twig" %}

{% block content %}

    <section class="offer__container">
        <form class="offer__content" action="/ajouter-entreprise" method="POST">
            <h2>Ajouter une entreprise</h2>
            <p>Ajoutez une nouvelle entreprise à la plateforme.</p>

            <label for="name">Nom de l'entreprise</label>
            <input name="name" type="text" placeholder="Titre de l'entreprise" id="name" required>

            <label for="description">Description de l'entreprise</label>
            <textarea name="description" id="description" placeholder="Description de l'entreprise" required></textarea>

            <label for="location">Ville de l'entreprise (siège)</label>
            <input name="location" type="text" placeholder="Ville de l'entreprise" id="location" required>

            <label for="email_contact">Email de contact</label>
            <input name="email_contact" type="email" placeholder="Email de contact" id="email_contact" required>

            <label for="telephone_contact">Téléphone de contact</label>
            <input name="telephone_contact" type="tel" placeholder="Téléphone de contact" id="telephone_contact" required>

            <hr>
            <h4>Avis sur l'entreprise (optionnel)</h4>
            <label for="rating">Note de l'entreprise</label>
            <div id="rating-container">
                <img src="/assets/img/star.svg" alt="etoile" class="star" data-value="1">
                <img src="/assets/img/star.svg" alt="etoile" class="star" data-value="2">
                <img src="/assets/img/star.svg" alt="etoile" class="star" data-value="3">
                <img src="/assets/img/star.svg" alt="etoile" class="star" data-value="4">
                <img src="/assets/img/star.svg" alt="etoile" class="star" data-value="5">
            </div>
            <input type="hidden" name="rating" id="rating">

            <label for="comment">Commentaire sur l'entreprise</label>
            <textarea name="comment" id="comment" placeholder="Commentaire sur l'entreprise"></textarea>

            <input type="submit" class="button__primary button--small crud_add" value="Ajouter l'entreprise">
        </form>
    </section>

    <script src="/assets/js/rating.js"></script>

{% endblock %}