{% extends "base.twig" %}

{% block content %}

    <section class="login__container">
        <div class="login__content">
            <form id="formLogin" method="POST" action="/connexion">
                <h1>Connexion</h1>
                <div class="login__input">
                    <label for="email">Email</label>
                    <input type="email" id="email" name="email" placeholder="martin.matin@viacesi.fr" required>
                    <i class='icon'>person</i>
                </div>
                <div class="login__input">
                    <label for="password">Mot de passe</label>
                    <input type="password" id="password" name="password" placeholder="***********" required>
                    <i class='icon'>lock</i>
                </div>
                <div class="login__forgot">
                    <a href="#">Mot de passe oubliÃ© ?</a>
                </div>
                {% if(error) %}
                    <div class="login__error">
                        <p class="error">{{ error }}</p>
                    </div>
                {% endif %}
                <p></p>
                <input type="submit" class="button__primary button--small" value="Se connecter">
            </form>
        </div>

        <div class="login__animation">
            <div class="login__panel animation__left">
                <img src="/assets/img/login.svg" alt="Login illustration">
            </div>
            <div class="login__panel animation__right">
                <h1>C'est parti !! ðŸš€</h1>
            </div>
        </div>
    </section>

    <script src="/assets/js/login.js"></script>


{% endblock %}