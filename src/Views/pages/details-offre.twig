{% extends "base.twig" %}

{% block content %}

    <section class="offer__container">
        <div class="offer__content">
            <h2>{{ offer.title }}</h2>
            <p>{{ offer.description }}</p>

            <div class="offer__details">
                <p><strong>Posté le : </strong>{{ offer.created_at|date("d/m/Y") }}</p>
                <div class="offers__card__tags">
                    <p>
                        <i class="icon">location_on</i>
                        {{ offer.city }}, {{ offer.country }}
                    </p>
                    <p>
                        <i class="icon">schedule</i>
                        Stage
                    </p>
                </div>
            </div>
            <hr>
            <h3>À propos de l'entreprise</h3>
            <p>{{ offer.company.description }}</p>
            <div class="offer__cta">
                <div class="offer__cta__text">
                    <img alt="Image Postuler" class="offer__cta__logo" src="http://static-intern-rift.westeurope.cloudapp.azure.com/img/offer.svg">
                    <div>
                        <h4>Postulez dès maintenant</h4>
                        <p>Vous devez être connecté.</p>
                    </div>
                </div>
                <a class="button__primary" href="/postuler?id={{ offer.id }}">
                    Postuler
                    <i class="icon button__icon">arrow_forward</i>
                </a>
            </div>
        </div>
        <div class="background"></div>
    </section>

    <section class="bg__200">
        <div class="offers__container">
            <div class="offers__header">
                <h2>Les dernières offres de stages</h2>
                <a class="button__secondary" href="/offres">Voir toutes les offres
                    <i class="icon button__icon">arrow_forward</i>
                </a>
            </div>
            <article class="offers__cards">
                {% for offer in offers %}
                    <a class="offers__card" href="/details-offre?id={{ offer.id }}">
                        <p class="offers__card__company">{{ offer.company.name }}</p>
                        <h3 class="offers__card__title">{{ offer.title }}</h3>
                        <div class="offers__card__tags">
                            <p>
                                <i class="icon">location_on</i>
                                {{ offer.city }}, {{ offer.country }}
                            </p>
                            <p>
                                <i class="icon">schedule</i>
                                Stage
                            </p>
                        </div>
                        <button class="button__primary">Détails
                            <i class="icon button__icon">arrow_forward</i>
                        </button>
                    </a>
                {% endfor %}
            </article>
        </div>

    </section>

{% endblock %}